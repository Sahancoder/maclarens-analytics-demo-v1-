# ============================================
# McLarens Analytics - Production Environment
# ============================================
# This configuration enables DEMO MODE with mock data

# DEMO MODE: Use mock data instead of backend API
NEXT_PUBLIC_USE_MOCK_DATA=true

# Authentication (NextAuth)
NEXTAUTH_URL=https://your-app.vercel.app
NEXTAUTH_SECRET=your-production-secret-here-change-this

# API Configuration (not used in demo mode, but required for build)
NEXT_PUBLIC_API_URL=https://demo.example.com
NEXT_PUBLIC_GRAPHQL_ENDPOINT=https://demo.example.com/graphql

# App Configuration
NEXT_PUBLIC_APP_NAME=McLarens Analytics Demo
NEXT_PUBLIC_APP_ENV=production
